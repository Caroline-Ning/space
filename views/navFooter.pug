doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    //- title S P A C E
    title #{title}

    block css
    link(rel='icon' type='image/png' sizes='32x32' href='/images/cube-small.png')
    link(rel='stylesheet', href='/stylesheets/navFooter.css')

