  body
    div.header
      nav.nav
        a(href='/')
          img#logo.nav__logo(src='/images/logo-sec2.png' alt='SPACE logo')
        .nav__links
          .nav__item
            a.nav__link(href='/') Home
          .nav__item
            a.nav__link(href='/forum') Forum
          .nav__item
            a.nav__link(href='/teaparty') Tea Party
          .nav__item.dropdown
            div
              i.fa-regular.fa-user &nbsp
              .dropBtn#dropBtn
                span User
            .dropContent#dropContent
              
              if user == undefined
                div
                  a.nav__link(href="/google") Log In
              else
                div
                  a.nav__link(href='/users/profile') Profile
                div
                  a.nav__link(href="/logout") Logout
      
      block parallax

    
